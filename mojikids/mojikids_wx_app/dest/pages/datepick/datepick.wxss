/* pages/datepick/datepick.wxss */
.pagemain {
  background: #fff; }
  .pagemain .head {
    height: 45px;
    border-bottom: 1rpx solid #e6e6e6; }
    .pagemain .head .title {
      font-size: 14px;
      color: #111; }
    .pagemain .head .arrow_con {
      width: 75px; }
  .pagemain .des_con {
    margin-top: 18rpx;
    margin-bottom: 48rpx;
    color: #666;
    font-size: 12px; }
    .pagemain .des_con .yellow {
      color: #ffc430; }
  .pagemain .date {
    font-size: 14px;
    margin-bottom: 10px; }
  .pagemain .days {
    text-align: center; }
    .pagemain .days.y {
      color: #ffc430; }
    .pagemain .days.g {
      color: #ccc; }
    .pagemain .days.cur .days_inner {
      background: #ffc430;
      color: #fff;
      border-radius: 50%; }
    .pagemain .days .days_inner {
      margin: 10px; }
  .pagemain .zone_notice {
    padding-left: 15px;
    font-size: 14px;
    color: #666666;
    margin-bottom: 15px; }
    .pagemain .zone_notice .damn_yellow {
      color: #ffc430; }
  .pagemain .zone_con {
    padding-left: 15px; }
    .pagemain .zone_con .child {
      text-align: center;
      font-size: 14px;
      display: inline-block;
      margin-bottom: 15px;
